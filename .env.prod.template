# Production Environment Variables Template
# Copy this file to .env.prod and fill in your production values

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-use-strong-random-string
DEBUG=False
ALLOWED_HOSTS=your-domain.com,api.your-domain.com,localhost

# Database Configuration
DB_PASSWORD=secure-database-password-here
DATABASE_URL=postgresql://postgres:secure-database-password-here@db:5432/ti_chess

# Redis Configuration
REDIS_PASSWORD=secure-redis-password-here
REDIS_URL=redis://:secure-redis-password-here@redis:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-wix-site.com

# Docker Registry
DOCKER_REGISTRY=ghcr.io/your-username

# Frontend URLs
FRONTEND_API_URL=https://api.your-domain.com
FRONTEND_WS_URL=wss://api.your-domain.com

# Error Tracking
SENTRY_DSN=your-sentry-backend-dsn-here
FRONTEND_SENTRY_DSN=your-sentry-frontend-dsn-here

# Email Configuration (Optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key